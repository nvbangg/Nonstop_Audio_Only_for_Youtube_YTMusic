{
  "manifest_version": 3,
  "name": "Nonstop & Audio Only for YouTube & YouTube Music",
  "short_name": "Nonstop & Audio Only",
  "version": "1.5",
  "description": "Playing Nonstop & Audio Only on YouTube & YouTube Music",
  "homepage_url": "https://chromewebstore.google.com/detail/bobdimbkbnkabpfhdfbddjoppiohcodi",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://www.youtube.com/*", "*://music.youtube.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["js/video_handler.js", "js/nonstop_inject.js", "style.css"],
      "matches": ["*://www.youtube.com/*", "*://music.youtube.com/*"]
    }
  ],
  "action": {
    "default_title": "Nonstop & Audio Only for YouTube & YouTube Music",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://music.youtube.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ]
}
