{
  "manifest_version": 3,
  "name": "Nonstop & Audio Only for Youtube YTMusic",
  "version": "1.1",

  "description": "Playing Nonstop & Audio Only on YouTube & YouTube Music",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["*://www.youtube.com/*", "*://music.youtube.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["video_handler.js"],
      "matches": ["*://www.youtube.com/*", "*://music.youtube.com/*"]
    }
  ],
  "action": {
    "default_title": "Nonstop & Audio Only for Youtube YTMusic",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
